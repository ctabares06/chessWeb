@import '../colors'
@import '../neon'

.container
    display: flex
    align-items: center
    cursor: pointer
    margin-right: .25em
        
.container span > div
    width: auto 
    height: 100%
    border-radius: 50%
    background-color: lightPink
    neon pink 5px 2px
    opacity: 0
    transition: all 0.15s ease-in-out


.container input:checked + span > div
    opacity: 1


.input
    visibility: hidden
    width: 0
    height: 0

.button
    position: relative
    margin-right: .25em
    width: 1.25em
    height: 1.25em
    border: 2px solid pink
    border-radius: 50%
    padding: 3px
    display: inline-block

.text
    text-align: left

.test
    text-neon pink