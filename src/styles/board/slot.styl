@import '../colors'
@import '../variables'
@import '../neon'

.slot
	position: relative
	display: inline-block
	border-width: 1px
	border-style: solid
	border-color: biege
	border-top: none
	border-bottom: none
	width: 75px
	height: 75px

	&__counter
		display: flex
		justify-content: center
		align-items: center  
		width: 20px
		height: 20px
		border-radius: 50%
		position: absolute
		bottom: -20px
		left: 25px
		border-width: 2px
		border-style: solid
		font-size: .7em

		&--pink
			border-color: pink
			color: pink
			neon lightPink 3px 1px
			text-neon lightPink 4px 2px

		&--navy
			border-color: darkNavy
			color: navy
			neon lightNavy 3px 1px
			text-neon lightNavy 4px 2px

		&--yellow
			border-color: darkYellow
			color: yellow
			neon lightYellow 3px 1px
			text-neon lightYellow 4px 2px

	&__piece--pink svg
		color: pink
		filter: drop-shadow(0 0 3px lightPink)

	&__piece--navy svg
		color: navy
		filter: drop-shadow(0 0 3px lightNavy)
	
	&__piece--yellow svg
		color: yellow
		filter drop-shadow(0 0 3px lightYellow)

	&__background
		width: auto
		height: 100%
		padding: none
		margin: none
		&--pink
			gradient-neon pinkComplementary darkPink pink 
		&--yellow
			gradient-neon yellowComplementary darkYellow yellow
		&--navy
			gradient-neon navyComplementary darkNavy navy
		&--red
			gradient-neon #590f0f #ce2626 #ff3737
			

